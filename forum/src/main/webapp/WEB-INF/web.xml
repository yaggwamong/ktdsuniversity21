<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>forum</display-name>
	
	<!-- 고전적인 방식의 예외 핸들링 방식 - 커스텀 에러 페이지 보여주기 -->
	<!-- spring이 핸들링을 막아 둬서 이렇게 함 - 나중에는 json으로 바꿀 것임 -->
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/view/errors/404.jsp</location>
	</error-page>
	<!-- ctrl+shift_F 눌러서 바꿔 줄 것 -->
	
	<!-- The front controller of this Spring Web application, responsible for 
		handling all application requests -->
		
	<!-- applicationContext의 경로를 주면 관련 설정을 읽어서 spring 요청을 처리해 줌 -->
	<servlet>
		<servlet-name>springDispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/appServlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- Map all requests to the DispatcherServlet for handling -->
	<servlet-mapping>
		<servlet-name>springDispatcherServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- 다국어 지원을 위해 UTF-8로 바꿔 주는 역할 -->
	<filter>
		<filter-name>characterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>characterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- Context파일이 여러 개가 되었을 때 다 불러오기 위한 기능 -->
	<!-- applicationContext는 dispatcherServlet이 가져가니 이름이 달라도 상관 없다 -->
	<!-- needed for ContextLoaderListener -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/*Context.xml</param-value>
	</context-param>

	<!-- Bootstraps the root web application context before servlet initialization -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
</web-app>